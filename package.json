{
  "name": "o-monitor-rest",
  "version": "1.0.0",
  "packageManager": "yarn@3.2.2",
  "engines": {
    "node": ">=18.7.0"
  },
  "nodemonConfig": {
    "verbose": false,
    "exec": "node -r tsconfig-paths/register -r ts-node/register dist/src/server.js"
  },
  "scripts": {
    "build": "rm -rf dist && yarn tsc",
    "start:prod": "yarn copyfiles config/production.json dist && NODE_ENV=production node -r tsconfig-paths/register -r ts-node/register dist/src/server.js",
    "start:dev": "rm -rf dist && yarn tsc && yarn copyfiles config/* dist && NODE_ENV=development concurrently \"tsc --watch\" \"nodemon\"",
    "lint": "eslint src",
    "test": "rm -rf dist && yarn copyfiles config/* dist && NODE_ENV=test jest ./test"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "concurrently": "^7.3.0",
    "convict": "^6.2.3",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "express": "^4.18.1",
    "http-status-codes": "^2.2.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "joi": "^17.6.0",
    "joi-to-swagger": "^6.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "luxon": "^3.0.1",
    "morgan": "^1.10.0",
    "node-schedule": "^2.1.0",
    "nodemon": "^2.0.19",
    "pg": "^8.7.3",
    "reflect-metadata": "latest",
    "swagger-ui-express": "^4.5.0",
    "tsconfig-paths": "^4.1.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-http": "^4.2.0",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^29.2.4",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.186",
    "@types/luxon": "^3.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.3",
    "@types/node-schedule": "^2.1.0",
    "@types/pg": "^8.6.5",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "latest",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
